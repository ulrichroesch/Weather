{
  "name": "machine-advisor-weather-application",
  "version": "0.0.1",
  "main": "src/server.ts",
  "author": "Maxime Margalet",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "npm run clean && npm run build-ts && npm run copy-files",
    "clean": "rm -rf ./dist",
    "build-ts": "tsc",
    "copy-files": "cp bundle/* dist/ && cp package.json dist/ && cp yarn.lock dist/",
    "dev": "ts-node-dev --inspect --respawn --transpileOnly src/server.ts",
    "serve": "nodemon dist/server.js 3000",
    "test": "jest",
    "fix-lint": "tslint --fix --project tsconfig.json --exclude '**/node_modules/**'",
    "lint": "tslint --project tsconfig.json --exclude '**/node_modules/**'"
  },
  "dependencies": {
    "@types/request-promise-native": "^1.0.16",
    "body-parser": "^1.19.0",
    "compression": "^1.7.2",
    "express": "^4.16.3",
    "helmet": "^3.12.1",
    "lodash": "^4.17.15",
    "lowdb": "^1.0.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "uuid": "^3.3.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/compression": "^0.0.36",
    "@types/express": "^4.16.0",
    "@types/helmet": "^0.0.38",
    "@types/jest": "^23.1.3",
    "@types/lodash": "^4.14.136",
    "@types/lowdb": "^1.0.9",
    "@types/node": "^10.5.0",
    "@types/uuid": "^3.4.5",
    "jest": "^23.2.0",
    "prettier": "1.17.0",
    "ts-node-dev": "^1.0.0-pre.40",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.15.0",
    "tslint-lines-between-class-members": "1.3.1",
    "tslint-microsoft-contrib": "5.0.3",
    "tslint-plugin-prettier": "1.3.0",
    "typescript": "^2.9.2"
  }
}
